<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    <DockerfileContext>..\..</DockerfileContext>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.19.4" />
  </ItemGroup>

  <ItemGroup>
    <None Update="config.yaml">
      <CopyToOutputDirectory>name: "OneDrive Backup"
version: "2.2.3"
slug: hassio_onedrive_backup
description: &gt;-
  Automatic backups from Home Assistant to OneDrive
arch:
  - amd64
  - armhf
  - armv7
  - aarch64
url: "https://github.com/lavinir/hassio-onedrive-backup"
map:
  - config:rw
  - ssl:rw
  - addons:rw
  - media:rw
  - share:rw
  - backup:rw

ingress: true
hassio_role : "manager"
codenotary: "snirlavi@gmail.com"
apparmor: true
hassio_api : true
homeassistant_api: true
image: ghcr.io/lavinir/{arch}-hassonedrive
panel_icon: mdi:microsoft-onedrive
</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
